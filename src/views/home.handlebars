<div class="container">
  <h1>Productos</h1>

  <p>Hola {{first_name}} {{last_name}}</p>
  <p>To rol es de: {{role}}</p>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Código</th>
        <th>Stock</th>
        <th>Carrito</th>
      </tr>
    </thead>
    {{#each products}}
      <tbody>
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>${{this.price}}</td>
          <td>{{this.code}}</td>
          <td>{{this.stock}}</td>
          <td><button type="button" class="btn btn-light" onclick="addProduct('{{../cart}}','{{this._id}}')">Agregar</button></td>
        </tr>
      </tbody>
    {{/each}}
  </table>
  <h2>Realizar compra</h2>
  <button
    onclick="buyProducts('{{cart}}')"
    class="btn btn-primary"
  >Comprar</button>
  <h2>Salir del sistema</h2>
  <button
    onclick="location.href='/logout'"
    class="btn btn-primary"
  >Salir</button>
</div>

